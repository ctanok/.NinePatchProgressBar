<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.legacycle.ninepatchprogressbar.sample.MainActivity">

    <com.legacycle.ninepatchprogressbar.NinePatchProgressBar
        android:id="@+id/pb1"
        android:layout_width="0dp"
        android:layout_height="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:np_bg_padding_bottom="0dp"
        app:np_bg_padding_right="3dp"
        app:np_bg_padding_top="2dp"
        app:np_max="100"
        app:np_progress="10"/>

    <com.legacycle.ninepatchprogressbar.NinePatchProgressBar
        android:id="@+id/pb2"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb1"
        app:np_bg_padding_bottom="0dp"
        app:np_bg_padding_right="3dp"
        app:np_bg_padding_top="2dp"
        app:np_max="100"
        app:np_progress="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/progress_btn_1"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20%"/>

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/progress_btn_2"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="40%"/>

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/progress_btn_3"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="60%"/>

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/progress_btn_4"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="80%"/>

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/progress_btn_5"
            style="@style/Base.TextAppearance.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100%"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
